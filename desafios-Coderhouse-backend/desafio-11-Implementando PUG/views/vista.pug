extends index 

block partial 
    body 
        div(class="jumbotron")
             h1 Vista Productos 
             
              if validacion
                 div(class="table-responsive")
                     table(class="table table-dark")
                       tr
                            th Nombre 
                            th Precio 
                            th Foto
                       tr 
                            each values in allProductos
                               tr
                                    td=values.nombre
                                    td=values.precio
                                    td: img(width="50" src=values.thumbnail alt="not found")
                                    
                            
              else
                h3(class="alert alert-warning")=allProductos.error






